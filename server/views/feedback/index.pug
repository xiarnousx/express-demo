extends ../layout/index
block content
    #feedback.container
        .row
            .col-sm-4
                h1.feedback-form-title Send us feedback
                if success
                    .alert.alert-success
                        | Thank you for your feedback!
                if error
                    .alert.alert-danger
                        | There was an error did you filled in all fields!
                form.feedback-form(action="/feedback", method="POST")
                    .form-group
                        label(for='feedback-form-name') Name
                        input#feedback-form-name.form-control(type='text', name="fbName", placeholder='Enter your name', value=fbName)
                    .form-group
                        label(for='feedback-form-title') Title
                        input#feedback-form-title.form-control(type='text', name="fbTitle", placeholder='Title of your feedback', value=fbTitle)
                    .form-group
                        label(for='feedback-form-message') Message
                        textarea#feedback-form-message.form-control(type='text', name="fbMessage", placeholder='Enter your message, then hit the submit', rows='6')=fbMessage
                    button.btn.btn-default.pull-right(type='submit') Submit
            // primary
            aside.col-sm-8
                .maincontent.feedback
                    h2.article-title Recent Feedbacks
                    .feedback-messages
                    each feedback in feedbackList
                        .feedback-item.item-list.media-list
                            .feedback-item.media
                                .feedback-info.media-body
                                    .feedback-head
                                        .feedback-title=feedback.title
                                            | &nbsp;
                                            small.feedback-name.label.label-info=feedback.name
                                    .feedback-message=feedback.message
                   

